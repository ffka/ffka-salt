[Unit]
Description=tflow2 flow information collector

[Service]
Type=simple
User=tflow2
#Group=tflow2
Group=bird
WorkingDirectory={{ gopath }}/src/github.com/taktv6/tflow2
ExecStart={{ gopath }}/bin/tflow2 -config /etc/tflow2/config.yml -logtostderr -v 10
Restart=always

[Install]
WantedBy=multi-user.target