{% set gateway = salt['pillar.get']('network:br_ffka:is_gateway') -%}
# --- B.A.T.M.A.N. Interfaces for Freifunk ---Begin-
# FFKA - Mesh
allow-hotplug bat0
iface bat0 inet6 manual
    pre-up modprobe batman-adv
    post-up ip link set dev bat0 up
    post-up brctl addif br_ffka bat0
    post-up batctl -m bat0 it 10000
  {% if gateway | to_bool %}
    post-up batctl -m bat0 gw server 50000/50000
  {% endif %}

{% for hood in salt['pillar.get']('hoods') %}

allow-hotplug bat_{{ hood }}
iface bat_{{ hood }} inet6 manual
    pre-up modprobe batman-adv
    post-up ip link set bat_{{ hood}} up
    post-up brctl addif br_{{ hood }} bat_{{ hood }}
    post-up batctl -m bat_{{ hood }} it 10000
  {% if gateway | to_bool %}
    post-up batctl -m bat_{{ hood }} gw server 50000/50000
  {% endif %}
{% endfor %}
