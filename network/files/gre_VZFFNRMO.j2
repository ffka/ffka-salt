{% for gre in salt['pillar.get']('network:gre_VZFFNRMO:tunnel') %}

auto tun-{{ gre.name }}
iface tun-{{ gre.name }} inet tunnel
  mode gre6
  netmask 255.255.255.255
  address {{ gre.local }}
  dstaddr {{ gre.remote }}
  local {{ gre.local_endpoint }}
  endpoint {{ gre.gre_target }}
  ttl 64
  mtu 1400

iface tun-{{ gre.name }} inet6 static
  address {{ gre.v6_network }}

{% endfor %}
